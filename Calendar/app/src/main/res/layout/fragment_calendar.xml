<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendar_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calendar_ui.CalendarFragment"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/calendar_goalOfTheMonth_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/goalofthemonth_bg"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:paddingBottom="10dp"
            android:layout_gravity="bottom|end"
            android:orientation="vertical"

            >
            <TextView
                android:id="@+id/calendar_goalOfTheMonth_header"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Goal of the Month"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/calendar_goalOfTheMonth_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imma take over the world MWHAAHAHHAHAHAHH"
                android:textSize="14dp"
                android:paddingBottom="5dp"
                android:background="@android:color/transparent"
                />
        </LinearLayout>

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="20dp"/>


</LinearLayout>