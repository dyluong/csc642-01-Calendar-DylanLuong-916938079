<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/theme">

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_gravity="bottom|end">
            <Button
                android:id="@+id/home_previous_button"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:text="Previous"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="12sp"
                android:layout_gravity="bottom"/>

            <TextView
                android:id="@+id/home_currentdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="28sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:shadowRadius="20.0"
                />
            <Button
                android:id="@+id/home_next_button"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="Next"
                android:textSize="12sp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/home_tablesize_width"
        android:layout_height="@dimen/home_tablesize_height"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="2dp"
        android:scrollbars="vertical"
        android:background="@drawable/home_listofplans_table"

        >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="15dp">

            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>



        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:padding="5dp"
            android:layout_gravity="bottom|end">
            <Button
                android:id="@+id/home_create_card_button"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="Create Card"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="12sp"
                />
        </LinearLayout>

    </LinearLayout>




</LinearLayout>
